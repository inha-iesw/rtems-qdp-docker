{
  "name": "RTEMS QDP Development",
  "dockerFile": "../QDP.Dockerfile",
  "workspaceFolder": "/opt",
  "runArgs": [
    "--net=host",
    "--ipc=host",
    "--pid=host",
    "--volume=/tmp/.X11-unix:/tmp/.X11-unix:rw",
    "--volume=/mnt/wslg:/mnt/wslg:rw",
    "--volume=/usr/share/fonts:/usr/share/fonts:ro",
    "--device=/dev/dri:/dev/dri",
    "--env=DISPLAY=${localEnv:DISPLAY:-:0}",
    "--env=WAYLAND_DISPLAY=${localEnv:WAYLAND_DISPLAY:-wayland-0}",
    "--env=XDG_RUNTIME_DIR=${localEnv:XDG_RUNTIME_DIR:-/mnt/wslg/runtime-dir}",
    "--env=PULSE_RUNTIME_PATH=${localEnv:PULSE_RUNTIME_PATH}"
  ],
  "containerEnv": {
    "LIBGL_ALWAYS_INDIRECT": "1"
  },
  "mounts": [
    "source=${localWorkspaceFolder},target=/opt,type=bind"
  ],
  "privileged": true,
  "customizations": {
    "vscode": {
      "extensions": [
        "llvm-vs-code-extensions.vscode-clangd",
        "jeff-hykin.better-c-syntax",
        "vadimcn.vscode-lldb",
        "albert.TabOut",
        "ybaumes.highlight-trailing-white-spaces",
        "ms-python.vscode-pylance",
        "ms-python.debugpy",
        "twxs.cmake",
        "redhat.vscode-yaml",
        "Anthropic.claude-code",
        "rioj7.command-variable",
        "msfukui.eof-mark",
        "redhat.vscode-yaml",
        "coolchyni.beyond-debug",
        "ms-python.python",
        "MS-CEINTL.vscode-language-pack-ko"
      ],
      "settings": {
        "terminal.integrated.defaultProfile.linux": "bash",
        "python.languageServer": "Pylance",
        "files.associations": {
          "*.h": "c",
          "*.c": "c",
          "*.cpp": "cpp",
          "*.cc": "cpp",
          "*.hpp": "cpp"
        }
      }
    }
  },
  "postCreateCommand": "chmod +x /opt/setup-kernel.sh && /opt/setup-kernel.sh",
  "remoteUser": "root",
  "forwardPorts": [
    6144
  ]
}