{
  "name": "RTEMS QDP Development",
  "dockerFile": "../QDP.Dockerfile",
  "workspaceFolder": "/opt",
  "mounts": [
    "source=${localWorkspaceFolder},target=/opt,type=bind"
  ],
  "privileged": true,
  "customizations": {
    "vscode": {
      "extensions": [
        "llvm-vs-code-extensions.vscode-clangd",
        "jeff-hykin.better-c-syntax",
        "vadimcn.vscode-lldb",
        "MarekMaslanka.kernel-inspect",
        "albert.TabOut",
        "ybaumes.highlight-trailing-white-spaces",
        "MarekMaslanka.kernel-inspect",
        "ms-python.vscode-pylance",
        "ms-python.debugpy",
        "eamodio.gitlens",
        "twxs.cmake",
        "rioj7.command-variable",
        "redhat.vscode-yaml",
        "coolchyni.beyond-debug",
        "ms-python.python"
      ],
      "settings": {
        "terminal.integrated.defaultProfile.linux": "bash",
        "python.languageServer": "Pylance",
        "files.associations": {
          "*.h": "c",
          "*.c": "c",
          "*.cpp": "cpp",
          "*.cc": "cpp",
          "*.hpp": "cpp"
        }
      }
    }
  },
  "runArgs": [
    "--cap-add=SYS_PTRACE",
    "--security-opt=seccomp:unconfined",
    "--cpus=6",
    "--dns=8.8.8.8",
    "--dns=8.8.4.4"
  ],
  "postCreateCommand": "chmod +x /opt/setup-qdp.sh && /opt/setup-qdp.sh",
  "remoteUser": "root",
  "forwardPorts": [
    6144
  ]
}